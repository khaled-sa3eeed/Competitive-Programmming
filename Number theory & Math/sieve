const int N = 1e6 + 6;
bool prime[N];
void sieve()
{
    fill(prime, prime + N, true);
    prime[0] = prime[1] = false;
    for (int i = 2; i * i < N; i++)
    {
        if (prime[i])
        {
            for (int j = 2 * i; j < N; j += i)
            {
                prime[j] = false;
            }
        }
    }
}
